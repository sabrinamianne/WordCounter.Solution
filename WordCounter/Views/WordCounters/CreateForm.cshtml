@using WordCounter.Models;
@using System;

<!DOCTYPE html>
<html>
  <head>
    <meta charset='utf-8'>
    <title>WORD COUNTER</title>
  </head>
  <body>
    <h1>Enter your informations to check how frequently your word appears in your sentence!</h1>

    <form action="/wordcounters" method="post">
      <label for="sentence">Please enter a sentence : </label>
      <input id="sentence" name="sentence" type="text">
      <label for="word">Please enter a word : </label>
      <input id="word" name="word" type="text">
      <button type="submit">Submit</button>
    </form>
    <a href="/">Home page</a>
    </body>
</html>
